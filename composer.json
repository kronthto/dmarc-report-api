{
    "name": "kronthto/dmarc-report-api",
    "license": "MIT",
    "type": "project",
    "authors": [
        {
            "name": "Tobias Kronthaler",
            "email": "kronthto@gmail.com"
        }
    ],
    "require": {
        "php": ">=7.0.0",
        "cekurte/environment": "^0.3.0",
        "slim/slim": "^3.1",
        "solaris/php-dmarc": "^2.0",
        "vlucas/phpdotenv": "^2.4"
    },
    "require-dev": {
        "phpunit/phpunit": ">=4.8 < 6.0"
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/app/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Tests\\": "tests/"
        }
    },
	"scripts": {
        "test": "phpunit --verbose"
	},
    "config": {
        "preferred-install": "dist",
        "sort-packages": true,
        "optimize-autoloader": true
    }
}
